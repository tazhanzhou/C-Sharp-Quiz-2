<Window x:Class="question4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:question4"
        mc:Ignorable="d"
        Title="MainWindow" Height="180" Width="220">
    <Grid>
        <StackPanel Margin="10" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label FontWeight="Bold" Content="Student Id:"></Label>
                <TextBox x:Name="inputId" Width="50"></TextBox>
                <Button x:Name="checkBtn" Content="Check" Margin="5,0,0,0" Click="checkBtn_Click"></Button>
            </StackPanel>
            <StackPanel>
                <ListBox x:Name="stListBox" Height="80" Margin="10"></ListBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
