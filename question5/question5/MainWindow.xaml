<Window x:Class="question5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:question5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="20">
            <TreeView>
                <TreeViewItem x:Name="even" Header="Even Number List">
                </TreeViewItem>
                <TreeViewItem x:Name="odd" Header="Odd Number List">
                </TreeViewItem>
            </TreeView>
            <Button x:Name="addbtn" Content="ADD" Click="addbtn_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
